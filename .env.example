# Docker Compose Development Environment Variables
# Copy this file to .env and modify as needed

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_USER=sagittarius
POSTGRES_PASSWORD=sagittarius
POSTGRES_DB=sagittarius_development
POSTGRES_PORT=5432

# NATS Configuration
NATS_PORT=4222
NATS_HTTP_PORT=8222
NATS_URL=nats://nats:4222

# Rails Configuration
RAILS_ENV=development

# Node.js Configuration
NODE_ENV=development

# Sagittarius Rails Web Configuration
SAGITTARIUS_WEB_PORT=3000

# Sagittarius gRPC Configuration
SAGITTARIUS_GRPC_PORT=50051

# Aquila Configuration
AQUILA_PORT=8081
AQUILA_RUNTIME_TOKEN=dev_runtime_token
SAGITTARIUS_URL=http://sagittarius-grpc:50051

# Taurus Configuration
TAURUS_PORT=8082

# Draco Configuration
DRACO_PORT=8083

# Sculptor Configuration
SCULPTOR_PORT=3001

# Service Image Tags (use specific versions if needed)
# SAGITTARIUS_TAG=latest
# AQUILA_TAG=latest
# TAURUS_TAG=latest
# DRACO_TAG=latest
# SCULPTOR_TAG=latest

# Logging Level
RUST_LOG=info
